{
  description = "{{.Name}} â€” generated by flkr";

  inputs = {
    nixpkgs.url = "github:NixOS/nixpkgs/nixos-unstable";
    flkr-templates.url = "github:narvanalabs/flkr-templates{{with .TemplateVersion}}/{{.}}{{end}}";
  };

  outputs = { self, nixpkgs, flkr-templates, ... }:
    flkr-templates.lib.mkApp {
      inherit nixpkgs;
      src = ./.;
      ecosystem = "{{.Ecosystem}}";
{{- with .Version}}
      version = "{{.}}";
{{- end}}
{{- with .PackageManager}}
      packageManager = "{{.}}";
{{- end}}
{{- with .Framework}}
      framework = "{{.}}";
{{- end}}
{{- with .BuildCommand}}
      buildCommand = "{{.}}";
{{- end}}
{{- with .StartCommand}}
      startCommand = "{{.}}";
{{- end}}
{{- with .OutputDir}}
      outputDir = "{{.}}";
{{- end}}
{{- if .Port}}
      port = {{.Port}};
{{- end}}
{{- with .VendorHash}}
      vendorHash = {{.}};
{{- end}}
{{- if .SystemDeps}}
      systemDeps = [ {{range .SystemDeps}}"{{.}}" {{end}}];
{{- end}}
{{- if .EnvVars}}
      envVars = [ {{range .EnvVars}}"{{.}}" {{end}}];
{{- end}}
    };
}
